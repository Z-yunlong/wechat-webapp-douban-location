/* pages/location/location.wxss */

.location-session {
  background: #fff;
  width: 100%;
  white-space: nowrap;
  border-width: 1px 0px 1px 0px;
  border-style: solid;
  border-color: #e6e6e6;
}

.location-session-spacing {
  margin-bottom: 30rpx;
  padding: 20rpx 0rpx 20rpx 0rpx;
}

.location {
  display: flex;
  flex-direction: row;
  padding: 0rpx 30rpx 0rpx 30rpx;
}

.location .label-city, .location .label-type {
  position: relative;
  font-size: 28rpx;
  flex: 1;
  color: #9e9e9e;
}

.location .label-type {
  text-indent: 2em;
}

.label-city::after, .label-type::after {
  content: " ";
  display: inline-block;
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  right: 0;
  top: 50%;
  margin-top: -6rpx;
  border-width: 2px 2px 0px 0px;
  border-style: solid;
  border-color: #9e9e9e;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.city {
  color: #32cd32;
}
